@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

h1, h2
    letter-spacing: normal
    text-transform: none
.minutes, .seconds, .dots
  font-weight: 400
  margin: .17em
  font-size: 4em
.dots
  margin: -0.1em
.big-space
  letter-spacing: .3em;
.avatar
  width: 120px
  height: @width
  border-radius: 100%
  margin: .5em 0
.backdrop
  &--history
    background-image: url('../images/history.jpg')
    background-position: 0 0
    &.bespoke-backdrop-active
      opacity: 0.4
    &.bespoke-backdrop-before
      transition-delay: 1s
  &--wmii
    background-image: url('../images/wmii.jpg')
    background-position: 0 0
    &.bespoke-backdrop-active
      opacity: 0.4
    &.bespoke-backdrop-before
      transition-delay: 1s